#!/bin/bash
set -x

pod(){
sshpass -p $pass ssh -o StrictHostKeyChecking=no $user@ip -p $port 'cd e2e-konvoy && bash openebs-konvoy-e2e/pipelines/OpenEBS-base/stages/3-functional/busybox-deployment-jiva/busybox-deployment-jiva node '"'$CI_JOB_ID'"'' '"'$CI_PIPELINE_ID'"' '"'$RELEASE_TAG'"'
}

node(){
source ~/.profile
job_id=$(echo $1)
pipeline_id=$(echo $2)
releaseTag=$(echo $3)
time="date"
current_time=$(eval $time)

present_dir=$(pwd)
echo $present_dir

bash openebs-konvoy-e2e/utils/e2e-cr jobname:busybox-deployment-jiva jobphase:Waiting
bash openebs-konvoy-e2e/utils/e2e-cr jobname:busybox-deployment-jiva jobphase:Running init_time:"$current_time" job_id:"$job_id" pipeline_id:"$pipeline_id" openebs_version:"$releaseTag"

##Deploying BusyBox Application

test_name=$(bash openebs-konvoy-e2e/utils/generate_test_name testcase=busybox-provision-app-busybox-ns metadata="")
echo $test_name

cd litmus
echo "Running the litmus test for BusyBox Deployment..."
cp apps/busybox/deployment/run_litmus_test.yml deploy_busybox_jiva.yml

sed -i -e 's/value: openebs-jiva-sparse/value: openebs-jiva-default/g' \
-e 's/value: statefulset/value: deployment/g' \
-e 's/generateName: litmus-busybox-deploy-/generateName: busybox-deployment-jiva-/g' \
-e 's/app: busybox-litmus/app: busybox-litmus-jiva/g' deploy_busybox_jiva.yml

cat deploy_busybox_jiva.yml

bash ../openebs-konvoy-e2e/utils/litmus_job_runner label='app:busybox-litmus-jiva' job=deploy_busybox_jiva.yml

cd ..

bash openebs-konvoy-e2e/utils/dump_cluster_state;
bash openebs-konvoy-e2e/utils/event_updater jobname:busybox-deployment-jiva $test_name jobid:"$job_id" pipeline_id:"$pipeline_id"

##Deploying Liveness on BusyBox Application

test_name=$(bash openebs-konvoy-e2e/utils/generate_test_name testcase=busybox-liveness metadata="")
echo $test_name

cd litmus
echo "Running the litmus test for Liveness for BusyBox Application..."
cp apps/busybox/deployment/run_litmus_test.yml liveness_busybox_jiva.yml

sed -i -e 's/generateName: litmus-busybox-liveness-/generateName: litmus-busybox-liveness-jiva-/g' \
-e 's/liveness: litmus-busybox-liveness/liveness: litmus-busybox-liveness-jiva/g' liveness_busybox_jiva.yml

cat liveness_busybox_jiva.yml

bash ../openebs-konvoy-e2e/utils/litmus_job_runner label='liveness:litmus-busybox-liveness-jiva' job=liveness_busybox_jiva.yml

cd ..

bash openebs-konvoy-e2e/utils/dump_cluster_state;
bash openebs-konvoy-e2e/utils/event_updater jobname:busybox-deployment-jiva $test_name jobid:"$job_id" pipeline_id:"$pipeline_id"

##DATA-PERSISTENCE

test_name=$(bash openebs-konvoy-e2e/utils/generate_test_name testcase=data-persistence-check metadata="")
echo $test_name

cd litmus
echo "Running the litmus test to check data-persistence for BusyBox Application..."
cp experiments/functional/data-persistence/run_litmus_test.yml run_busybox_jiva_data_persistence.yml

sed -i -e 's/generateName: data-persistence-litmus-/generateName: data-persistence-busybox-jiva-/g' \
-e 's/name: data-persistence-litmus/name: data-persistence-busybox-jiva/g' \
-e '/name: APP_NAMESPACE/{n;s/.*/            value: app-busybox-ns/}' \
-e '/name: APP_LABEL/{n;s/.*/            value: '\''app=busybox-sts'\''/}' \
-e '/name: STATUS/{n;s/.*/           value: LOAD/}' \
-e '/name: DATA_PERSISTENCE/{n;s/.*/            value: busybox/}' run_busybox_jiva_data_persistence.yml

## Insert the set of variables for busybox data consistency util into configmap spec.
sed -i '/parameters.yml: |/a \
    blocksize: 4k \
    blockcount: 1024 \
    testfile: busybox_deployment_jiva
' run_busybox_jiva_data_persistence.yml

cat run_busybox_jiva_data_persistence.yml

bash openebs-konvoy-e2e/utils/litmus_job_runner label='name:data-persistence-busybox-jiva' job=run_busybox_jiva_data_persistence.yml

cd ..

bash openebs-konvoy-e2e/utils/dump_cluster_state;
bash openebs-konvoy-e2e/utils/event_updater jobname:busybox-deployment-jiva $test_name jobid:"$job_id" pipeline_id:"$pipeline_id"

}

if [ "$1" == "node" ];then
  node $2 $3 $4
else
  pod
fi